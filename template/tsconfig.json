{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@Api": ["Api"],
      "@Api/*": ["Api/*"],
      "@Context": ["Context"],
      "@Context/*": ["Context/*"],
      "@Constants": ["Constants"],
      "@Constants/*": ["Constants/*"],
      "@Screens": ["Screens"],
      "@Screens/*": ["Screens/*"],
      "@Styles": ["Styles"],
      "@Styles/*": ["Styles/*"],
      "@Components": ["Components"],
      "@Components/*": ["Components/*"],
      "@Navigation": ["Navigation"],
      "@Navigation/*": ["Navigation/*"],
      "@Store": ["Store"],
      "@Store/*": ["Store/*"],
      "@Utils": ["Utils"],
      "@Utils/*": ["Utils/*"],
      "@Icons": ["Assets/Icons"],
      "@Icons/*": ["Assets/Icons/*"],
      "@Images/*": ["Assets/Images/*"],
      "@Fonts": ["Assets/Fonts"],
      "@Fonts/*": ["Assets/Fonts/*"],
      "@Assets": ["Assets"],
      "@Hooks": ["Hooks"],
      "@Hooks/*": ["Hooks/*"],
      "@Data": ["Data"],
      "@Data/*": ["Data/*"],
      "@Providers": ["Providers"],
      "@Providers/*": ["Providers/*"],
      "@Core": ["Core"],
      "@Core/*": ["Core/*"],
      "@Features": ["Features"],
      "@Features/*": ["Features/*"],
      "@Services": ["Services"],
      "@Services/*": ["Services/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
